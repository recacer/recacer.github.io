.wrap {
  padding-top: 20rpx;
  padding-bottom: 0;
  position: relative;
  height: 100vh;
  box-sizing: border-box;
}
.wrap.blue{
  background-color: #0586cf;
}
.wrap.red{
  background-color: #dc3250;
}

.textBor {
 position: fixed;
 width: 100%;
 height: 100%;
 left: 0 ;
 top: 0;
}

.text {
  box-sizing: border-box;
  width: 100%;
  height: 230rpx;
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #e7e7e7;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
}

textarea {
  box-sizing: border-box;
  width: 600rpx;
  height: 140rpx;
  background-color: #e7e7e7;
  padding: 20rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border-radius: 10rpx;
  margin: 0 auto;
}

.blueBtn,.redBtn {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  padding: 0;
  font-size: 24rpx;
  margin: 10rpx auto 0;
}

.calendarBor {
  width: 640rpx;
  height: 985rpx;
  margin: 0 auto;
  background-color: #fff;
  position: relative;
}

.bg {
  display: block;
  width: 100%;
  height: 100%;
}

.wrap>image {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  right: 20rpx;
}

.edit {
  top: 660rpx;
}

.share {
  top: 780rpx;
}

.dateNum, .date, .num, .tips {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  line-height: 1;
}

.dateNum {
  top: 110rpx;
}

.date {
  top: 150rpx;
}

.num {
  font-size: 380rpx;
  top: 180rpx;
}

view.tips{
  top: 610rpx;
  width: 520rpx;
  font-size: 26rpx;
  line-height: 1.4;
}

.qrcode{
  position: absolute;
  top: 767rpx;
  left: 150rpx;
