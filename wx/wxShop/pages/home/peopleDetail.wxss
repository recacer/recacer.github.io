.sign{
  padding-bottom: 20rpx;
}
.sign.blue view{
  background-color: #0586cf;
}
.sign.red view{
  background-color: #dc3250;
}
.sign view{
  display:inline-block;
  position:relative;
  height:50rpx;
  line-height:50rpx;
  padding: 0 30rpx;
  margin:20rpx 15rpx 0;
  border-radius:50rpx;
  color: #fff;
}
