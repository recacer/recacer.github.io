.middle{
  background-color: #fff;
  padding-bottom: 30rpx;
}
.bottomBor{
  padding: 0 20rpx;
}
.bottomBor>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottomBor .upload{
  height: 170rpx;
}
.bottomBor image{
  display: block;
  width: 200rpx;
  height: 100rpx;
}

.bottom{
  padding-top: 80rpx;
}
.blueBtn{
  width: 240rpx;
  margin: 0 auto;
}
textarea{
  width: 670rpx;
  height: 160rpx;
  padding: 10rpx 20rpx;
  line-height: 1.5;
  background-color: #e7e7e7;
}
.bottomLine{
  padding-top: 20rpx;
}
.uploadBigImg{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 710rpx;
  height: 350rpx;
  background-color: #e7e7e7;
  border-radius: 10rpx;
}
.uploadBig{
  display: block;
  width: 710rpx;
}
.uploadBigImg image{
  width: 50rpx;
  margin-bottom: 40rpx;
}
